<% provide(:title, "List") %>
<h1>List View</h1>
<% @employee.each do |e| %>
	<% if e.reporting_manager.blank? %>
		<ul style="list-style-type:circle;">
			<li><%= e.name %><span> </span><%= e.designation %>
				
	
			<% @employee.each do |f| %>
				<%if f.reporting_manager == e.id.to_s %>
					<ul style="list-style-type:square;">
						<li><%= f.name %><span> </span><%= f.designation %>
					

						<% @employee.each do |g| %>
							<% if g.reporting_manager == f.id.to_s %>
								<ul style="list-style-type:disc;">
									<li><%= g.name %><span> </span><%= g.designation %></span>
								

									<% @employee.each do |h| %>
										<% if h.reporting_manager == g.id.to_s %>
											<ul style="list-style-type:disc;">
												<li><%= h.name %><span> </span><%= h.designation %></span>
											

												<% @employee.each do |i| %>
													<% if i.reporting_manager == h.id.to_s %>
														<ul style="list-style-type:disc;">
															<li><%= i.name %><span> </span><%= i.designation %></span>

															<% @employee.each do |j| %>
																<% if j.reporting_manager == i.id.to_s %>
																	<ul style="list-style-type:disc;">
																		<li><%= j.name %><span> </span><%= j.designation %></span></li>
																	</ul>

																<% end %>
															<% end %>
															</li>
															</ul>
													<% end %>
												<% end %>
												</li>
												</ul>
										<% end %>
									<% end %>
									</li>
									</ul>
							<% end %>
						<% end %>
						</li>
						</ul>
				<% end %>	
			<% end %>
			</li>
			</ul>
	<% end %>
<% end %>
