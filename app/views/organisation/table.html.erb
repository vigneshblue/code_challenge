<% provide(:title, "Table") %>
<div class="col-md-2 col-md-offset-10">                
 			<%= link_to "Add new", new_url, class: "btn btn-block btn-primary" %>
  		</div>
  		<div class="center">
<h1>Employee Details</h1>
<table class="table table-hover">
<thead>
	<tr class="text-left">
		<th>Emp ID</th>
		<th>Name</th>
		<th>Designation</th>
		<th>Manager</th>
	</tr>
	</thead>
	<% @employee.each do |e| %>
	<% if e.reporting_manager %>
	<% @idman = Integer(e.reporting_manager) %>
	<% @manager = EmployeeDetail.find(@idman) %>
	<% else %>
	<% @manager = EmployeeDetail.find(1) %>
	<% @manager.name = nil %>
	<% end %>
	<tbody>
	<tr class="text-left">
		<td><%= e.id %> </td>
		<td><%= link_to e.name,e %> </td>
		<td><%= e.designation %> </td>
		<td><%= @manager.name %> </td>
	</tr>
	<% end %>
	</tbody>
</table>
</div>
