<% provide(:title,"Edit") %>
<h1>Edit employee detail</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(@employee_detail) do |f| %>
	<%= f.label :name, "Name : " %>
	<%= f.text_field :name %>	
	<%= f.label :designation, "  Designation : " %>
	<%= f.text_field :designation %>
	<% if @employee_detail.manager_id.blank? %>
	<% else %>	
	<%= f.label :manager_id, "  Reporting Manager : " %>	
	<%= f.collection_select(:manager_id, @employee,:id,:name) %>
	<% end %>	
	<%= f.submit "Save Changes", class: "btn btn-primary" %>
	<% end %>
	</div>
</div>